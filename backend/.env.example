# Database Connection
# Use 'localhost' if running backend locally via npm. 
# Use 'postgres' (container name) if running backend via Docker.
DATABASE_URL="postgresql://admin:password123@localhost:5432/ai_assessment_db?schema=public"

# Auth Secrets
# You can generate one using: openssl rand -base64 32
JWT_SECRET="dev-secret-key-change-in-prod"

# Server Port
PORT=3000

# Redis Configuration
# Use 'localhost' for local npm run dev, or 'redis' for Docker.
REDIS_HOST=localhost
REDIS_PORT=6379

# ðŸ”‘ AI API Keys (REQUIRED)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="INSERT_YOUR_GEMINI_API_KEY_HERE"

# Optional: Switch AI Model (Default: gemini-2.0-flash-exp)
GEMINI_MODEL_NAME="gemini-2.0-flash-exp"

# PII Service URLs
# Note: If running locally via docker-compose, these are exposed on 5001/5002
PRESIDIO_ANALYZER_URL="http://localhost:5001"
PRESIDIO_ANONYMIZER_URL="http://localhost:5002"